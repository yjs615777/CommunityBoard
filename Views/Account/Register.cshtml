@using CommunityBoard.Contracts.Requests
@model RegisterRequest

@{
    ViewData["Title"] = "회원가입";
    ViewData["LayoutTheme"] = "default-theme";  // 흰 배경 + 검정 글자
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/pages/register.css" />

<section class="register-stage">
    <form class="register-form" asp-action="Register" asp-controller="Account" method="post" novalidate>
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-row">
            <label asp-for="Name">이름</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="field-error"></span>
        </div>

        <div class="form-row">
            <label asp-for="Email">이메일</label>
            <input asp-for="Email" type="email" />
            <span asp-validation-for="Email" class="field-error"></span>
        </div>

        <div class="form-row">
            <label asp-for="Password">비밀번호</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="field-error"></span>
        </div>

        <div class="form-row">
            <label asp-for="ConfirmPassword">비밀번호 2차 확인</label>
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword" class="field-error"></span>
        </div>

        <div class="actions">
            <button type="submit" class="btn">회원가입</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}