@using CommunityBoard.Contracts.Response
@using CommunityBoard.Contracts.Common
@model PagedResult<PostListItemDto>

@{
    ViewData["Title"] = "공지사항";
    ViewData["LayoutTheme"] = "default-theme";
    Layout = "_Layout";

    int totalPages = (int)Math.Ceiling(Model.Total / (double)Model.Size);
    int page = Model.Page;
    int size = Model.Size;
    int startNumber = Model.Total - ((page - 1) * size);
}

<link rel="stylesheet" href="~/css/pages/posts-index.css" />

<section class="board-stage">
    <h1 class="board-title">공지사항</h1>

    <div class="table-wrap">
        <table class="board-table">
            <colgroup>
                <col class="col-no" />
                <col class="col-title" />
                <col class="col-author" />
                <col class="col-date" />
                <col class="col-views" />
            </colgroup>
            <thead>
                <tr>
                    <th>번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>작성일</th>
                    <th>조회수</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Items.Count; i++)
                {
                    var p = Model.Items[i];
                    var local = p.CreatedAt.ToLocalTime();
                    string dateText = (local.Date == DateTime.Today)
                    ? local.ToString("HH\\:mm")
                    : local.ToString("M\\.d");
                    var rowClass = p.IsPinned ? "row pinned" : "row";
                    <tr class="@rowClass">
                        <td class="cell-no">@((startNumber - i) > 0 ? (startNumber - i) : 0)</td>
                        <td class="cell-title">
                            @if (p.IsPinned)                            // ✅ 추가
                            {
                                <span class="badge-pin">고정</span>
                            }
                            
                            <a href="/Posts/Detail/@p.Id" class="link">@p.Title</a>
                        </td>
                        <td>@p.AuthorName</td>
                        <td>@dateText</td>
                        <td class="num">@p.ViewCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav class="pagination">
        @if (page > 1)
        {
            <a class="page" href="/Notice?page=@(page - 1)&pageSize=@size">이전</a>
        }

        @{
            int win = 3;
            int from = Math.Max(1, page - win);
            int to = Math.Min(totalPages, page + win);

            if (from > 1)
            {
                <a class="page" href="/Notice?page=1&pageSize=@size">1</a>
                if (from > 2)
                {

                    <span class="dots">…</span>
                }
            }

            for (int i = from; i <= to; i++)
            {
                if (i == page)
                {

                    <span class="page current">@i</span>
                }
                else
                {

                    <a class="page" href="/Notice?page=@i&pageSize=@size">@i</a>
                }
            }

            if (to < totalPages)
            {
                if (to < totalPages - 1)
                {

                    <span class="dots">…</span>
                }
                <a class="page" href="/Notice?page=@totalPages&pageSize=@size">@totalPages</a>
            }
        }

        @* 작성 버튼은 관리자만 노출 *@
        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
        {
            <a class="btn write" href="/Notice/Create">글쓰기</a>
        }
    </nav>
</section>