<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - J.S</title>
    <link rel="stylesheet" href="~/css/pages/layout.css" />
    @RenderSection("Head", required: false)
</head>
<body class="@ViewData["LayoutTheme"]">
    <header class="layout-header">
        <div class="header-inner">
            <a asp-controller="Landing" asp-action="Index" class="brand">J.S</a>
            <nav class="menu">
                <a href="/Notice">공지사항</a>
                <a asp-controller="Posts" asp-action="Index">자유게시판</a>
                <a href="/Qna">문의게시판</a>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="logout-btn">로그아웃</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login">로그인</a>
                }
            </nav>
        </div>
    </header>

    <main class="layout-content">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>